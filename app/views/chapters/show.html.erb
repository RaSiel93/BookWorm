<div class="book shelf">
  <div style="margin: 0 0 5px 0px" align="center">
  <% if user_signed_in? %>
    <%= link_to t('chapter.edit'), edit_book_chapter_path(@book, @chapter), :method => :get, :class => 'btn' %>
  <% end %>
      <%= link_to t('book.content'), @book, :method => :get, :class => 'btn' %>
      <a id='button_font_size_decrement' class="btn"><img src="/assets/font_size_minus.png"/></a>
      <a id='button_font_size_increment' class="btn"><img src="/assets/font_size_plus.png"/></a>
      <select id="width_reader">
        <option>100%</option>
        <option>70%</option>
        <option>50%</option>
      </select>
  </div>

  <div id="reader_paper">
  <h1><%= t('chapter.chapter') + ' ' + @chapter.number.to_s + ': ' + @chapter.title %></h1>

  <%= markdown(@chapter.content)%>
  </div>
</div>